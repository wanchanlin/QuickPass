    ViewData["Title"] = "Home Page";
}

<section class="hero">
    <h1>Buy Tickets Instantly with QuickPass</h1>
    <p>Find and purchase tickets for your favorite events in seconds.</p>
    <a href="#events" class="btn">Browse Events</a>
</section>

<section id="events" class="events">
    <h2>Upcoming Events</h2>
    <div class="event-list">
        <div class="event">
            <img src="images/blank-featured-image.jpg" alt="Alternate Text" />
