@model QuickPass.Models.ViewModels.AccountDetails

@{
    ViewData["Title"] = "Account Details";
}

<h1 class="text-center my-4">Account Details</h1>

<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h4 class="mb-0">Account Information</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3 font-weight-bold">First Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.FirstName)</dd>

            <dt class="col-sm-3 font-weight-bold">Last Name:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.LastName)</dd>

            <dt class="col-sm-3 font-weight-bold">Email:</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Account.Email)</dd>

            <dt class="col-sm-3 font-weight-bold">Associated Tickets:</dt>
            <dd class="col-sm-9">
                <ul class="list-unstyled">
                    @if (Model.AccountTickets != null && Model.AccountTickets.Any())
                    {
                        @foreach (var ticket in Model.AccountTickets)
                        {
                            <li>
                                <span class="font-weight-bold">Seat Number:</span> @ticket.SeatNumber
                                <br />
                                <span class="font-weight-bold">Price:</span> @ticket.Price.ToString("C")
                                <br />
                                <span class="font-weight-bold">Booked:</span> @ticket.BookingDate.ToString("d")
                            </li>
                        }
                    }
                    else
                    {
                        <li>No tickets available.</li>
                    }
                </ul>
            </dd>
        </dl>
    </div>
</div>

<div class="mt-4">
    <a asp-action="Edit" asp-route-id="@Model.Account.AccountId" class="btn btn-primary btn-lg">Edit</a>
    <a asp-action="List" class="btn btn-secondary btn-lg">Back to List</a>
</div>
